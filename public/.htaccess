# Arquivo: /inventory-app-php/public/.htaccess

<IfModule mod_rewrite.c>
    # Ativa o módulo de reescrita
    RewriteEngine On
    
    # Define a base (opcional, mas seguro se for um subdiretório)
    # Verifique se o seu path é /inventory-app-php/public/
    RewriteBase /inventory-app-php/public/
    
    # Se o que foi solicitado não for um arquivo existente
    RewriteCond %{REQUEST_FILENAME} !-f
    
    # E não for um diretório existente
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redireciona TUDO (o ^(.*)$) para ser processado pelo index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>